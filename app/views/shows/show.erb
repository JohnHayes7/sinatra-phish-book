<% if flash.has?(:show_added) %>
    <h3><%= flash[:show_added] %></h3>
<% end %>

<% if flash.has?(:show_not_added) %>
    <h3><%= flash[:show_not_added] %></h3>
<% end %>

<% if flash.has?(:edit_creds) %>
    <h3><%= flash[:edit_creds] %></h3>
<% end %>

<h1><%= @show[:venue] %>    </h1>
<h2><%= @show[:location] %></h2>
<h2><%= @show[:date] %></h2>
<p><%= @show[:setlist] %></p>

<h4>Memories:</h4><br>
    <% @show.memories.each do |m| %>
    <%=m.fan.username%> says: <%= m. content %>
    <a href="/memories/<%=m.id%>/edit">edit</a> <br>
    <% end %><br>
    <br>
